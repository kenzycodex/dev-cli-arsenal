{
    "name": "dev-cli-arsenal",
    "version": "1.0.0",
    "description": "ðŸš€ Ultimate collection of 75+ essential CLI tools for developers. Package managers, build tools, productivity boosters, and workflow automation - all in one place with installation guides and benchmarks.",
    "main": "index.js",
    "scripts": {
      "test": "jest --coverage",
      "test:watch": "jest --watch",
      "test:ci": "jest --ci --coverage --watchAll=false",
      "lint": "eslint scripts/ tools/ .github/scripts/ --ext .js",
      "lint:fix": "eslint scripts/ tools/ .github/scripts/ --ext .js --fix",
      "format": "prettier --write \"**/*.{js,md,json,yml,yaml}\"",
      "format:check": "prettier --check \"**/*.{js,md,json,yml,yaml}\"",
      "verify": "node scripts/verify-tools.js",
      "verify:critical": "node scripts/verify-tools.js --critical-only",
      "install:interactive": "node tools/tool-installer.js",
      "install:essential": "bash scripts/install.sh || powershell -ExecutionPolicy Bypass -File scripts/install.ps1",
      "docs:serve": "docsify serve docs",
      "docs:build": "node .github/scripts/generate-docs.js",
      "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
      "changelog:all": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
      "release": "semantic-release",
      "coverage": "jest --coverage && codecov",
      "benchmark": "node .github/scripts/benchmark-tools.js",
      "check-updates": "node .github/scripts/check-tool-updates.js",
      "validate": "npm run lint && npm run format:check && npm run test",
      "pre-commit": "lint-staged",
      "prepare": "husky install",
      "clean": "rimraf coverage/ node_modules/ .nyc_output/ dist/",
      "dev": "nodemon --watch scripts --watch tools --exec \"npm run verify:critical\"",
      "start": "npm run install:interactive"
    },
    "repository": {
      "type": "git",
      "url": "https://github.com/kenzycodex/dev-cli-arsenal.git"
    },
    "keywords": [
      "cli-tools",
      "developer-tools",
      "productivity",
      "command-line",
      "javascript",
      "nodejs",
      "build-tools",
      "package-manager",
      "workflow",
      "automation",
      "development",
      "utilities",
      "performance",
      "open-source",
      "devtools",
      "terminal",
      "shell",
      "bash",
      "powershell",
      "cross-platform",
      "linting",
      "formatting",
      "bundler",
      "testing",
      "deployment"
    ],
    "author": {
      "name": "dev-cli-arsenal contributors",
      "url": "https://github.com/kenzycodex/dev-cli-arsenal/graphs/contributors"
    },
    "license": "MIT",
    "bugs": {
      "url": "https://github.com/kenzycodex/dev-cli-arsenal/issues"
    },
    "homepage": "https://github.com/kenzycodex/dev-cli-arsenal#readme",
    "engines": {
      "node": ">=16.0.0",
      "npm": ">=8.0.0"
    },
    "devDependencies": {
      "@semantic-release/changelog": "^6.0.3",
      "@semantic-release/git": "^10.0.1",
      "@types/jest": "^29.5.8",
      "@types/node": "^20.9.0",
      "codecov": "^3.8.3",
      "conventional-changelog-cli": "^4.1.0",
      "docsify-cli": "^4.4.4",
      "eslint": "^8.54.0",
      "eslint-config-prettier": "^9.0.0",
      "eslint-plugin-jest": "^27.6.0",
      "eslint-plugin-node": "^11.1.0",
      "eslint-plugin-security": "^1.7.1",
      "husky": "^8.0.3",
      "jest": "^29.7.0",
      "lint-staged": "^15.1.0",
      "nodemon": "^3.0.1",
      "prettier": "^3.1.0",
      "rimraf": "^5.0.5",
      "semantic-release": "^22.0.8"
    },
    "dependencies": {
      "chalk": "^4.1.2",
      "inquirer": "^8.2.6",
      "ora": "^5.4.1"
    },
    "optionalDependencies": {
      "tree-kill": "^1.2.2"
    },
    "peerDependencies": {
      "node": ">=16.0.0"
    },
    "files": [
      "scripts/",
      "tools/",
      "docs/",
      "examples/",
      "README.md",
      "LICENSE",
      "CHANGELOG.md"
    ],
    "bin": {
      "dev-cli-arsenal": "./tools/tool-installer.js",
      "verify-tools": "./scripts/verify-tools.js"
    },
    "lint-staged": {
      "*.{js,ts}": [
        "eslint --fix",
        "prettier --write"
      ],
      "*.{md,json,yml,yaml}": [
        "prettier --write"
      ]
    },
    "jest": {
      "testEnvironment": "node",
      "collectCoverageFrom": [
        "scripts/**/*.js",
        "tools/**/*.js",
        ".github/scripts/**/*.js",
        "!**/node_modules/**"
      ],
      "coverageThreshold": {
        "global": {
          "branches": 70,
          "functions": 70,
          "lines": 70,
          "statements": 70
        }
      },
      "testMatch": [
        "**/__tests__/**/*.js",
        "**/?(*.)+(spec|test).js"
      ],
      "verbose": true
    },
    "eslintConfig": {
      "env": {
        "node": true,
        "es2021": true,
        "jest": true
      },
      "extends": [
        "eslint:recommended",
        "plugin:node/recommended",
        "plugin:security/recommended",
        "plugin:jest/recommended",
        "prettier"
      ],
      "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
      },
      "rules": {
        "no-console": "off",
        "node/no-unpublished-require": "off",
        "node/shebang": "off",
        "security/detect-child-process": "warn",
        "security/detect-non-literal-fs-filename": "warn"
      }
    },
    "prettier": {
      "semi": true,
      "trailingComma": "es5",
      "singleQuote": true,
      "printWidth": 80,
      "tabWidth": 2,
      "useTabs": false,
      "bracketSpacing": true,
      "arrowParens": "avoid",
      "endOfLine": "lf"
    },
    "release": {
      "branches": [
        "main"
      ],
      "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        "@semantic-release/changelog",
        "@semantic-release/npm",
        "@semantic-release/github",
        [
          "@semantic-release/git",
          {
            "assets": [
              "CHANGELOG.md",
              "package.json"
            ],
            "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
          }
        ]
      ]
    },
    "funding": [
      {
        "type": "github",
        "url": "https://github.com/sponsors/kenzycodex"
      },
      {
        "type": "opencollective",
        "url": "https://opencollective.com/dev-cli-arsenal"
      }
    ],
    "badges": [
      {
        "description": "License",
        "href": "https://opensource.org/licenses/MIT",
        "url": "https://img.shields.io/badge/License-MIT-yellow.svg"
      },
      {
        "description": "PRs Welcome",
        "href": "http://makeapullrequest.com",
        "url": "https://img.shields.io/badge/PRs-welcome-brightgreen.svg"
      },
      {
        "description": "CI Status",
        "href": "https://github.com/kenzycodex/dev-cli-arsenal/actions",
        "url": "https://github.com/kenzycodex/dev-cli-arsenal/workflows/CI%2FCD%20Pipeline/badge.svg"
      }
    ],
    "contributors": [
      {
        "name": "Community Contributors",
        "url": "https://github.com/kenzycodex/dev-cli-arsenal/graphs/contributors"
      }
    ]
  }